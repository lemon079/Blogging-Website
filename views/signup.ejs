<!DOCTYPE html>
<html lang="en">

<head>
    <title>Sign Up</title>
    <%- include('./partials/head') %>
    <style>
        @media (max-width: 576px) {
            h2 {
                font-size: 1.5rem; /* Adjust heading size for smaller screens */
            }
        }
    </style>
</head>

<body>
    <%- include('./partials/navbar') %>
    <div class="container mt-5">
        <% if (locals.error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <p><%= locals.error %></p>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <h2 class="text-center">Sign Up</h2>
        <form method="post" action="/auth/signup" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="fullname" class="form-label">Full Name</label>
                <input type="text" class="form-control" name="fullname" id="fullname" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" class="form-control" name="email" id="email" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" name="password" id="password" required>
            </div>
            <div class="mb-3">
                <label for="profilePicture" class="form-label">Profile Picture</label>
                <input type="file" class="form-control" name="profilePicture" id="profilePicture" accept="image/*">
            </div>
            <button type="submit" class="btn btn-primary w-100">Sign Up</button> <!-- Full-width button -->
        </form>
    </div>
    <%- include('./partials/script') %>
</body>

</html>
