<!DOCTYPE html>
<html lang="en">

<head>
    <title>Home Page</title>
    <%- include('./partials/head') %>
    <style>
        .blog-img-top {
            width: 100%;
            height: 200px; /* Fixed height to maintain aspect ratio */
            object-fit: cover; /* Cover the area without distortion */
        }

        /* Additional responsive styles */
        @media (max-width: 768px) {
            .blog-img-top {
                height: 150px; /* Adjust height for smaller screens */
            }
        }
    </style>
</head>

<body>
    <%- include('./partials/navbar') %>
    <div class="container mt-5">
        <div class="row">
            <% if (locals.Blogs && Blogs.length > 0) { %>
                <% Blogs.forEach(blog => { %>
                    <div class="col-md-4 col-sm-6 mb-4"> <!-- Responsive columns -->
                        <div class="single-blog card">
                            <img class="blog-img-top card-img-top" src="<%= blog.coverImageUrl %>" alt="<%= blog.title %>">
                            <div class="card-body">
                                <h5 class="blog-title card-title"><%- blog.title %></h5>
                            </div>
                            <a href="/blogs/<%= blog._id %>" class="btn btn-primary">View</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="alert alert-primary" role="alert">
                    No Blogs Created
                </div>
            <% } %>
        </div>
    </div>

    <%- include('./partials/script') %>
</body>

</html>
