<!DOCTYPE html>
<html lang="en">

<head>
    <title>Profile</title>
    <%- include('./partials/head') %>
        <style>
            .profile-header {
                margin-top: 20px;
            }

            .profile-info {
                margin-top: 20px;
            }

            .profile-info .card {
                margin-bottom: 20px;
            }

            .admin-badge {
                color: white;
                background-color: #007bff;
                padding: 2px 8px;
                border-radius: 4px;
                font-size: 0.9em;
                display: inline-block;
                margin-top: 5px;
            }
        </style>
</head>

<body>
    <%- include('./partials/navbar') %>
        <div class="container">
            <!-- Profile Header -->
            <div class="profile-header row align-items-center">
                <div class="col-md-3 text-center">
                    <img src="<%= locals.user.profilePictureURL %>" alt="<%= locals.user.fullName %>'s Profile Picture"
                        class="border border-dark rounded-circle" width="150" height="150">
                </div>
                <div class="col-md-9">
                    <h2 class="text-capitalize">
                        <%= locals.user.fullName %>
                    </h2>
                    <p class="text-muted">@<%= locals.user.username %>
                    </p>
                    <% if (locals.user.role==="ADMIN" ) { %>
                        <span class="admin-badge">Admin</span>
                        <% } %>
                            <div class="mt-3">
                                <a href="/user/edit" class="btn btn-warning">Edit Account</a>
                                <form action="/user/delete" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger">Delete Account</button>
                                </form>
                            </div>
                </div>
            </div>

            <!-- Profile Info -->
            <div class="profile-info">
                <!-- About Section -->
                <div class="card">
                    <div class="card-header">About</div>
                    <div class="card-body">
                        <p class="card-text">
                            <%= locals.user.bio || "This user hasn't added a bio yet." %>
                        </p>
                    </div>
                </div>

                <!-- Contact Information Section -->
                <div class="card">
                    <div class="card-header">Contact Information</div>
                    <div class="card-body">
                        <p class="card-text">
                            <strong>Email:</strong>
                            <%= locals.user.email %>
                        </p>
                        <p class="card-text">
                            <strong>Phone:</strong>
                            <%= locals.user.phone %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <%- include('./partials/script') %>
</body>

</html>